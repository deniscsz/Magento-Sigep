<?xml version="1.0"?>
<config>
  <modules>
    <Xpd_Sigep>
      <version>1.0.0</version>
    </Xpd_Sigep>
  </modules>
  <global>
    <helpers>
      <sigep>
        <class>Xpd_Sigep_Helper</class>
      </sigep>
    </helpers>
	<models>
	  <sigep>
		<class>Xpd_Sigep_Model</class>
		<resourceModel>sigep_mysql4</resourceModel>
	  </sigep>
	  <sigep_mysql4>
		<class>Xpd_Sigep_Model_Mysql4</class>
		<entities>		  
			  <sigep>
				<table>sigep</table>
			  </sigep>
		</entities>
	  </sigep_mysql4>
	</models>
	<resources>
	  <sigep_setup>
		<setup>
		  <module>Xpd_Sigep</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </sigep_setup>
	  <sigep_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </sigep_write>
	  <sigep_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </sigep_read>
	</resources>
    <!-- events-->
    <rewrite>
    <xpd_sigep_adminhtml_sales_order>
        <from><![CDATA[#/admin/sales_order/#]]></from>
        <to>/sigep/adminhtml_sales_order/</to>
    </xpd_sigep_adminhtml_sales_order>
    </rewrite>
    <blocks>
        <adminhtml>
            <rewrite>
                <sales_order_grid>Xpd_Sigep_Block_Adminhtml_Sales_Order_Grid</sales_order_grid>
            </rewrite>
        </adminhtml>
    </blocks>
  </global>
  <admin>
    <routers>
        <xpd_sigep>
            <use>admin</use>
            <args>
                <module>Xpd_Sigep</module>
                <frontName>sigep</frontName>
            </args>
        </xpd_sigep>			
		<adminhtml>
			<args>
			  <modules>
				<Xpd_Sigep_Adminhtml before="Mage_Adminhtml">Xpd_Sigep_Adminhtml</Xpd_Sigep_Adminhtml>
			  </modules>
			</args>
		</adminhtml>
    </routers>
  </admin>
</config> 